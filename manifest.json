{
  "manifest_version": 2,

  "name": "GameDuell - Rate Converter",
  "description": "This extension automatically converts any 'G£' value into GBP (£) when hovering over an element with these values.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon48.png",
    "icons": {
    	"16": "icon16.png",
    	"48": "icon48.png",
    	"128": "icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "GameDuell - Rate Converter"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "background": {
  	"scripts": ["background.js"],
  	"persistent": true
  },
  "content_scripts": [
  {
  	"matches": ["http://*.gameduell.com/*", "https://*.gameduell.com/*"],
  	"js": ["content.js"],
  	"run_at": "document_end",
  	"all_frames": true
  }]
}